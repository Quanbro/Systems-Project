= form_for [@child, @program] do |f|
  - if @program.errors.any?
    #error_explanation
      %h2= "#{pluralize(@program.errors.count, "error")} prohibited this program from being saved:"
      %ul
        - @program.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.label :name
    = f.text_field :name
    = f.submit 'Save'
