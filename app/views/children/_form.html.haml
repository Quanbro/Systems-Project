= form_for @child do |f|
  - if @child.errors.any?
    #error_explanation
      %h2= "#{pluralize(@child.errors.count, "error")} prohibited this child from being saved:"
      %ul
        - @child.errors.full_messages.each do |msg|
          %li= msg

  .actions
    %br  
    = f.label :first_name
    = f.text_field :first_name
    %br  
    = f.label :last_name
    = f.text_field :last_name      
    = f.submit 'Save'
