= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.label :email 
    = f.text_field :email 
    %br
    = f.label :role
    = f.select(:role,{ "Admin" => "Admin", "Therapist" => "Therapist", "Parent"=>"Parent"})
    %br
    = f.label :password 
    = f.password_field :password
    %br
    = f.label :password_confirmation 
    = f.password_field :password_confirmation   
    %br 
    = f.submit 'Save'